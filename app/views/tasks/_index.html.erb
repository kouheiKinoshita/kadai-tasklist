<h1>課題一覧</h1>

<table class="table table-striped">
  <thead>
   <tr>
     <th>id</th>
     <th>ステータス</th>
     <th>課題</th>
   </tr>
  </thead>
  
  <tbody>
    <% @tasks.each do |task| %>
     <tr>
      <td><%= link_to task.id, task %> </td>
      <td><%= task.status %></td>
      <td><%= task.content %></td>
     </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @tasks %>


<%= link_to "課題の投稿", new_task_path, class: "btn btn-primary" %>

